<body>
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>KPI <b>Indicadores</b></h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Descripcion</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PuedesPasARG.Models.Kpi kpi in Model.Indicadores)
                    {
                        <tr>
                            <td class="cellRTId">@kpi.nombre.ToString()</td>
                            <td class="cellRTDevie">@kpi.valor.ToString() @kpi.medida.ToString() </td>    
                        </tr>
                        
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

