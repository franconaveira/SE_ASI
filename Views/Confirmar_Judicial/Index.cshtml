@{
    ViewBag.Title = "Confirmar_Judicial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gabarito&family=Lato&display=swap" rel="stylesheet">

    <title>Confirmación de expediente judicial</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Apoyo en la Detección de ASI</title>
    <style>
        body {
            font-family: 'Gabarito', cursive;
            font-family: 'Lato', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #121212;
            color: white;
            text-align: left;
            padding: 10px;
        }

            header h6 {
                background-color: #4D5F6F;
                color: white;
                height: 10px;
            }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        label {
            display: block;
            margin-bottom: 10px; /* Espacio entre el label y la lista desplegable */
        }

        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px; /* Espacio adicional entre las preguntas */
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .selectOption {
            width: 200px;
            border-color: black;
        }

        button {
            background-color: #333;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .buttonCorrecto {
            background-color: green;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            justify-content: center;
        }

        .buttonIncorrecto {
            background-color: red;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            justify-content: center;
        }
        /* Estilos para la ventana modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
            padding-top: 60px;
            box-sizing: border-box;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-height: 70%; /* Máximo 70% de la altura de la ventana */
            overflow-y: auto; /* Habilita el desplazamiento vertical si es necesario */
            word-wrap: break-word; /* Rompe las palabras largas si no caben */
            box-sizing: border-box;
            display: flex;
            justify-content: flex-end; /* Esto alinea los botones a la derecha */
        }

        .modal button {
            width: 20%;
            align-content: center
        }

        .botones-container button {
            margin-left: 10px; /* Espacio entre los botones */
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }
        /* Estilos para el signo de pregunta */
        .question-mark {
            cursor: pointer;
            margin-left: 5px;
            font-size: 14px;
            color: white; /* Cambia el color del texto */
            /*background-color: #6bc7ff*/ /* Cambia el color de fondo */
            background-color: #4579a8; /* Cambia el color de fondo */
            border-radius: 50%; /* Dale forma circular */
            padding: 2px 5px; /* Ajusta el espacio alrededor */
        }


        /* Estilos para el banner y los botones */
        .banner {
            background-color: #0c2133; /* Fondo oscuro */
            padding: 0px; /* Espaciado interno */
            display: flex;
            justify-content: flex-start; /* Alinea los botones a la izquierda */
        }

            .banner button {
                padding: 15px 30px;
                font-size: 18px;
                margin-right: 0px; /* Espaciado entre botones */
                border: none;
                cursor: pointer;
                transition: background-color 0.3s ease; /* Transición suave del color */
                font-family: 'Gabarito', cursive;
                font-family: 'Lato', sans-serif;
                background-color: #0c2133; /* Color de fondo oscuro para el banner */
                color: white; /* Color del texto */
            }

                .banner button:hover {
                    background-color: #1565c0; /* Cambia el color al pasar el ratón */
                }

        /* Estilos para el formulario */
        .form-container {
            margin: 20px auto; /* Centrar en la página */
            background-color: #f0f0f0; /* Fondo gris claro */
            padding: 30px; /* Aumentar el espacio interno */
            border-radius: 10px; /* Bordes redondeados */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); /* Sombra */
            max-width: 800px; /* Ancho máximo del contenedor */
        }

            .form-container label {
                display: block;
                margin-bottom: 10px;
                font-size: 18px;
                font-family: 'Gabarito', cursive;
                font-family: 'Lato', sans-serif;
            }

            .form-container input {
                width: calc(100% - 20px); /* Ancho ajustado */
                padding: 15px;
                font-size: 18px;
                margin-bottom: 15px;
                border: 1px solid #ccc; /* Borde ligero */
                border-radius: 5px; /* Bordes redondeados */
                font-family: 'Gabarito', cursive;
                font-family: 'Lato', sans-serif;
            }

            .form-container button {
                padding: 15px 30px;
                font-size: 18px;
                border: none;
                display: block; /* Convertir en elemento bloque para centrar horizontalmente */
                margin: 0 auto; /* Centrar horizontalmente */
                border-radius: 5px; /* Bordes redondeados */
                transition: background-color 0.3s ease; /* Transición suave del color */
                font-family: 'Gabarito', cursive;
                font-family: 'Lato', sans-serif;
                background-color: #333; /* Color de fondo oscuro para el botón */
                color: white; /* Color del texto */
            }

                .form-container button:hover {
                    background-color: #1565c0; /* Cambia el color al pasar el ratón */
                }
    </style>
</head>
<body>
    <header>
        <h1>Sistema de Apoyo en la Detección de ASI</h1>
    </header>

    <div class="banner">
        <button onclick="irAInicio()">Inicio</button>
        <button onclick="irARegistro()">Registrar Denuncia</button>
        <button onclick="irAConfirmar()">Confirmación Experto</button>
        <button onclick="irAConfirmarJudicial()">Confirmación Judicial</button>
    </div>

    <div class="form-container">
        <h2> ¿Se confirmó judicialmente la situación de abuso?</h2>
        <br />
        <form id="formulario">
            <label for="numExpediente">Número de denuncia legal:</label>
            <input type="text" id="numExpediente" placeholder="Ingrese el número de denuncia legal">
            <button type="button" id="enviar">Buscar</button>
        </form>

    </div>
    <!-- Contenedor de la ventana modal -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <pre id="jsonContent" style="overflow:auto; height:800px"></pre>
            <div class="botones-container">
                <button type="button" id="correcto" class="buttonCorrecto">Situación de abuso confirmada</button>
                <button type="button" class="buttonIncorrecto" id="incorrecto">Situación de abuso no confirmada</button>
            </div>
        </div>

    </div>

    <script>
        document.getElementById('correcto').addEventListener('click', function ()
        {
        const js = {
            numExpediente: document.getElementById('numExpediente').value,
            Confirmacion_Legal: 1
            };

            const jsString = JSON.stringify(js);
        $.ajax({
            type: "POST",
            url: '@Url.Action("confirmarDenunciaLegal", "Confirmar_Judicial")',
            dataType: "string",
            data: jsString,
            async: false,
            contentType: "application/json; charset=utf-8",
            success: function (respuesta) {
                respuestaJS = JSON.stringify(respuesta);
                console.log(JSON.stringify(respuesta));
            }
        });

            const modal = document.getElementById('myModal');
            const jsonContent = document.getElementById('jsonContent');
            jsonContent.innerText = "Registro actualizado";
            modal.style.display = 'block';

            const butCorrecto = document.getElementById('correcto');
            const butIncorrecto = document.getElementById('incorrecto');
            butCorrecto.style.display = 'none';
            butIncorrecto.style.display = 'none';


            // Cuando el usuario hace clic en la 'x', cerrar la ventana modal
            const closeButton = document.getElementsByClassName('close')[0];
            closeButton.onclick = function () {
                modal.style.display = 'none';
            }
        });

    </script>

    <script>
        document.getElementById('incorrecto').addEventListener('click', function ()
        {
            const js =
            {
                numExpediente: document.getElementById('numExpediente').value,
                Confirmacion_Legal: 0
            };
            const jsString = JSON.stringify(js);
        $.ajax({
            type: "POST",
            url: '@Url.Action("confirmarDenunciaLegal", "Confirmar_Judicial")',
            dataType: "string",
            data: jsString,
            async: false,
            contentType: "application/json; charset=utf-8",
            success: function (respuesta) {
                respuestaJS = JSON.stringify(respuesta);
                console.log(JSON.stringify(respuesta));
            }
        });

            const modal = document.getElementById('myModal');
            const jsonContent = document.getElementById('jsonContent');
            jsonContent.innerText = "Registro actualizado";
            modal.style.display = 'block';
            const butCorrecto = document.getElementById('correcto');
            const butIncorrecto = document.getElementById('incorrecto');
            selectOption.style.display = 'none';
            butCorrecto.style.display = 'none';
            butIncorrecto.style.display = 'none';
            // Cuando el usuario hace clic en la 'x', cerrar la ventana modal
            const closeButton = document.getElementsByClassName('close')[0];
            closeButton.onclick = function () {
                modal.style.display = 'none';
            }
        });

    </script>
    <script>
        document.getElementById('enviar').addEventListener('click', function () {

             /*Obtener todas las respuestas del formulario y crear un objeto JSON*/
            const valNumExp = document.getElementById('numExpediente').value;
            const js = {
                numExpediente: valNumExp
            };
            var respuestaJS;
            const jsString = JSON.stringify(js);
            console.log(jsString);
            $.ajax({
            type: "POST",
            url: '@Url.Action("buscarDenunciaLegal", "Confirmar_Judicial")',
            dataType: "json",
                data: jsString,
            async: false,
            contentType: "application/json; charset=utf-8",
            success: function (respuesta) {
                respuestaJS = JSON.stringify(respuesta);
                }
            });
            console.log(respuestaJS);
            //////////////////////Agregado//////////////////////////
            // Mostrar la ventana modal con el contenido JSON
            const butCorrecto = document.getElementById('correcto');
            const butIncorrecto = document.getElementById('incorrecto');
            butCorrecto.style.display = 'initial';
            butIncorrecto.style.display = 'initial';
            const modal = document.getElementById('myModal');
            const jsonContent = document.getElementById('jsonContent');
            const message = JSON.parse(respuestaJS);
            console.log(message);
            const edad = message.Edad;
            jsonContent.innerText = "- Datos del diagnóstico: " +
                "\n     Número de diagnóstico: " + message.ID_Diagnostico +
                "\n     Nivel de sospecha: " + message.Nivel +
                "\n     Número de denuncia: " + valNumExp;
            modal.style.display = 'block';

            // Cuando el usuario hace clic en la 'x', cerrar la ventana modal
            const closeButton = document.getElementsByClassName('close')[0];
            closeButton.onclick = function () {
                modal.style.display = 'none';
            }
        });
    </script>
    <script>
        function irAInicio() {
            window.location.href = "/Home";
        }

        function irARegistro() {
            window.location.href = "/Registrar";
        }

        function irAConfirmar() {
            window.location.href = "/Confirmar";
        }
        function irAConfirmarJudicial() {
            window.location.href = "/Confirmar_Judicial";
        }
    </script>
</body>
</html>



